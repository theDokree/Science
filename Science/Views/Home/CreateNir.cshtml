@model Science.Models.Nir

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <center>
        <h2>РЕГИСТРАЦИОННАЯ КАРТА</h2>
        <h4>на тему диссертационного исследования</h4>
    </center>
    <hr />

    @using (Html.BeginForm())
    {
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Наименование (тема) работы", new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-lg-50" })
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Annotation, "Аннотация", new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Annotation, new { @class = "form-control" })
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Index, "РК-03 Шифр (темы) работы, присвоенный организацией", new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Index, new { @class = "form-control" })
        </div>
        <br />
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Base, "Основание для проведения НИОКР", new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(model => model.Base, ViewBag.Bases as SelectList)
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Kind, "Виды работ", new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(model => model.Kind, ViewBag.Kinds as SelectList)
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Finance, "Источники финансирования", new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(model => model.Finance, ViewBag.Finances as SelectList)
        </div>
        <br />
    </div>
        <input type="submit" class="btn btn-default" value="Добавить" />
    }
</body>
</html>